{
  "expo": {
    "name": "Wellness OS",
    "slug": "wellness-os",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "scheme": "wellnessos",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.wellnessos.app",
      "infoPlist": {
        "NSHealthShareUsageDescription": "Wellness OS needs access to your health data to provide personalized wellness insights and track your progress.",
        "NSHealthUpdateUsageDescription": "Wellness OS needs permission to update your health data to sync your wellness activities.",
        "NSFaceIDUsageDescription": "Wellness OS uses Face ID to securely unlock your app and protect your health data.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1a1a1a"
      },
      "package": "com.wellnessos.app",
      "permissions": [
        "ACTIVITY_RECOGNITION",
        "USE_BIOMETRIC",
        "BILLING",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "13.4"
          },
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "minSdkVersion": 26,
            "buildToolsVersion": "34.0.0"
          }
        }
      ],
      "react-native-health",
      "expo-health-connect",
      "expo-secure-store",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Wellness OS uses Face ID to securely unlock your app and protect your health data."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "f5c39858-7d01-4a73-890a-311d6be683e1"
      }
    }
  }
}
