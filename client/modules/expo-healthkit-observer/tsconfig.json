{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "build"]
}
