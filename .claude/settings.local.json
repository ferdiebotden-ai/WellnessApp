{
  "env": {
    "NODE_ENV": "development"
  },
  "permissions": {
    "allow": [
      "Bash(curl:*)",
      "Bash(where:*)",
      "Bash(gcloud:*)",
      "Bash(firebase:*)",
      "Bash(gh:*)",
      "Bash(supabase:*)",
      "Bash(Get-ChildItem -Force)",
      "Bash(Select-Object Name, LastWriteTime)",
      "Bash(Format-Table -AutoSize)"
    ],
    "deny": [],
    "ask": [
      "Bash(rm:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)"
    ]
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "git status --short 2>/dev/null || echo 'Not a git repo'"
          }
        ]
      }
    ]
  }
}
