{
  "env": {
    "NODE_ENV": "development"
  },
  "permissions": {
    "allow": [
      "Bash(curl:*)",
      "Bash(which:*)",
      "Bash(gcloud:*)",
      "Bash(firebase:*)",
      "Bash(gh:*)",
      "Bash(supabase:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "mcp__github__list_commits",
      "mcp__n8n-mcp__n8n_health_check",
      "mcp__n8n-mcp__n8n_diagnostic"
    ],
    "deny": [],
    "ask": [
      "Bash(rm:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)"
    ]
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "git status --short 2>/dev/null || echo 'Not a git repo'"
          }
        ]
      }
    ]
  }
}
